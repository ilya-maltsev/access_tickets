


<script src="<%=  Redmine::Utils::relative_url_root %>/plugin_assets/access_tickets/javascripts/jquery.chosen.js"></script>

<% if ISetting.check_config() %>
  <div class="tabs">
    <ul>
      <li>
        <%= link_to l(:at_main_settings), { :tab => "main_settings" },
        :id => "tab-main_settings",
        :class => ('selected'),
        :onclick => "showTab('main_settings', this.href); this.blur(); return false;" %>
      </li>
      <li>
        <%= link_to l(:at_group_liders), { :tab => "liders_mgt" },
        :id => "tab-liders_mgt",
        :class => (''),
        :onclick => "showTab('liders_mgt', this.href); this.blur(); return false;" %>
      </li>

    </ul>
  </div>
  <%= content_tag('div', render(:partial => "isettings/main_settings", :locals => {}), :id => 'tab-content-main_settings', :style => (''), :class => 'tab-content') %>
  <%= content_tag('div', render(:partial => "isettings/groups_mgt", :locals => {}), :id => 'tab-content-liders_mgt', :style => ('display:none'), :class => 'tab-content') %>
  
<% else %>
  <div class="tabs">
    <ul>
      <li>
        <%= link_to l(:at_base_config), { :tab => "base_config" },
        :id => "tab-base_config",
        :class => ('selected'),
        :onclick => "showTab('base_config', this.href); this.blur(); return false;" %>
      </li>
    </ul>
  </div>
  <%= content_tag('div', render(:partial => "isettings/base_config", :locals => {}), :id => 'tab-content-base_config', :style => (''), :class => 'tab-content') %>
<% end %>




<script>
  $('div#settings form input[type="submit"]').val("Закрыть");
</script>


