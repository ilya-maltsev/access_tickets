              if ($(this).is(":checked")) {
                access["entities"].push($(this).attr('id'));
              }
            });
            sendData.push(access);
          }
        });
        $.post("<%=j Redmine::Utils::relative_url_root %>/access_tickets/edit_revoking_table/save", { issue_id: <%=j @issue_id %>, r_user_id: <%=j @r_user_id %>, i_tickets: JSON.stringify(sendData) }, function( data ) {
