      var table_errors = 0;
      var Rows = $('#edit_ticket').DataTable().settings()[0]["aoData"];
      var sendData = new Array();
      if (Rows.length > 0) {
        $('#edit_ticket tbody tr').each(function(){
          if ($(this).find('.single_checker').is(":checked")) {
            var access = {};
            access["r_uid"] = "";
            access["entities"] = [];
            access["r_uid"] = $(this).find('.single_checker').attr('id');
